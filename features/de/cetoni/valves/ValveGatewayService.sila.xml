<?xml version="1.0" encoding="utf-8" ?>
<Feature SiLA2Version="1.0" FeatureVersion="1.0" Originator="de.cetoni" Category="valves" xmlns="http://www.sila-standard.org" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.sila-standard.org https://gitlab.com/SiLA2/sila_base/raw/master/schema/FeatureDefinition.xsd">
    <Identifier>ValveGatewayService</Identifier>
    <DisplayName>Valve Gateway Service</DisplayName>
    <Description>Provides means to access individual valves of a valve terminal</Description>

    <!-- Metadata -->
    <Metadata>
        <Identifier>ValveIdentifier</Identifier>
        <DisplayName>Valve Identifier</DisplayName>
        <Description>The identifier of a single valve of a valve terminal</Description>
        <DataType>
            <Basic>String</Basic>
        </DataType>
    </Metadata>

    <!-- Commands -->
    <Property>
        <Identifier>ValveIdentifiers</Identifier>
        <DisplayName>Valve Identifiers</DisplayName>
        <Description>A list of all possible valve names (identifiers) of this device</Description>
        <Observable>No</Observable>
        <DataType>
            <List>
                <DataType>
                    <Basic>String</Basic>
                </DataType>
            </List>
        </DataType>
    </Property>
</Feature>
